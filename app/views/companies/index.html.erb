  </thead>
  <tbody>
    <% @companies.each_with_index do |company, index| %>
      <tr>
        <td>
          <b><%= index+1 %></b>
          <%= render 'notations/note_badge', subject: company %>
        </td>
        <td><%= link_to company, company %></td>
