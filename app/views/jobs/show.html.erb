<h1>
  <%= @job %> 
  <%= render 'notations/note_badge', subject: @job %>
</h1>
<%= link_to 'Edit', edit_job_path(@job), class: 'btn btn-default' %><br/><br/>
<%= render 'notations/note_a_subject', subject: @job %>
<h3><%= @job.offers.count %> offer(s)</h3>
<ul class="list-unstyled">
  <% @job.offers.each do |offer| %>
    <li><%= link_to offer, offer %></li>
  <% end %>
</ul>
