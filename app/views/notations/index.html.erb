<h1>Notations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Criterion</th>
      <th>Subject</th>
      <th>Score</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notations.each do |notation| %>
      <tr>
        <td><%= notation.criterion %></td>
        <td><%= notation.subject %></td>
        <td><%= notation.score %></td>
        <td><%= link_to 'Show', notation %></td>
        <td><%= link_to 'Edit', edit_notation_path(notation) %></td>
        <td><%= link_to 'Destroy', notation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Notation', new_notation_path %>
